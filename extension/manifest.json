{
  "manifest_version": 3,
  "name": "Focus Nudge",
  "version": "0.1.0",
  "description": "Playful nudges when you drift into endless scrolling.",
  "permissions": ["tabs", "storage"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://focus-nudge-extension.onrender.com/*"
  ],
  "background": {
    "service_worker": "src/background/service_worker.js"
  },
  "action": {
    "default_title": "Focus Nudge",
    "default_popup": "src/ui/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/ui/options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["src/content/rules.js", "src/content/content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
