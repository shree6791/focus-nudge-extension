{
  "manifest_version": 3,
  "name": "Focus Nudge",
  "version": "0.1.0",
  "description": "Playful nudges when you drift into endless scrolling.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "Focus Nudge",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["rules.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
